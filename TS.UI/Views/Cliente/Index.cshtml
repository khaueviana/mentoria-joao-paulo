@model IEnumerable<TS.DTO.Classes.Cliente>


@{
    ViewData["Title"] = "Clientes Cadastrados";
    Layout = "_LayoutAdm";
}

@if (TempData["Success"] != null)
{
    <script>alert("@TempData["Success"]")</script>

}

<h2>Clientes</h2>

<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rg)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cpf)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Endereco)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Celular)
        </th>

    </tr>




@foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Rg)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cpf)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Endereco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Celular)
            </td>
            
            <td>
                @Html.ActionLink("Alterar", "Edit", new {id = item.Id}) |
                @Html.ActionLink("Detalhes", "Details", new {id = item.Id}) |
                @Html.ActionLink("Remover", "Delete", new {id = item.Id})
            </td>
        </tr>
    }
    
</table>
