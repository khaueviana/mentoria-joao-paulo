@model TS.DTO.Classes.Sessao
@{
    ViewData["Title"] = "Clientes Agendados";
    Layout = "~/Views/Shared/_LayoutAdm.cshtml";
}

<div class="container">
    <h1 class="text-center">Alterar Clientes</h1>
    <div class="row" style="padding-top: 10%">
        <div class="col-lg-12">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group-lg">
                <form asp-action="Edit" class="text-center">
                    <div class="col-lg-6">
                        <label asp-for="Data"></label>
                        <input asp-for="Data" type="date" class="form-control" />
                    </div>

                    <div class="col-lg-6">
                        <label asp-for="Preco"></label>
                        <input asp-for="Preco" class="form-control" />

                    </div>
                    
                    <div class="col-lg-6">
                        @Html.DropDownList("ClienteId", "Selecione um cliente")
                    </div>

                    <div class="col-lg-6">
                        @Html.DropDownList("FormaPagamentoId", "Selecione uma forma de pagamento")
                    </div>

                   <input type="submit" value="Alterar" class="btn btn-primary" />
                </form>

            </div>

        </div>
    </div>

</div>


