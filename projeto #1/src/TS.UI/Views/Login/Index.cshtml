@{
    ViewData["Title"] = "Login";

}
@model LoginViewModel

<div class="container">
    <div class="row" style="padding-top: 10%">
        <div class="col-lg-12">
            <div class="col-lg-3"></div>
            <div class="form-group-lg">
                <div class="col-lg-6">
                    <form asp-action="Logar" class="text-center">
                        <label>Usuario:</label>
                        <input asp-for="Login"  required="required" class="form-control" />
                        <label>Senha:</label>
                        <input asp-for="Senha" required="required" type="password" class="form-control" />
                        <br />
                        <input type="submit" value="Entrar" class="btn btn-primary" />
                        
                    </form>


                </div>
            </div>
            <div class="col-lg-3"></div>
        </div>
    </div>

</div>